{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "**/.git*",
            "**/.svn",
            "**/.hg",
            "**/node_modules",
            "*.md",
            "**/*.json",
            "**/*config*",
            "package-lock.json"
        ]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noStaticOnlyClass": "off"
            },
            "style": {
                "noNonNullAssertion": "warn",
                "useExponentiationOperator": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 2,
        "lineEnding": "lf",
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "arrowParentheses": "always",
            "lineEnding": "lf",
            "quoteStyle": "double",
            "trailingCommas": "es5",
            "lineWidth": 150,
            "semicolons": "asNeeded",
            "bracketSpacing": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentWidth": 2
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "defaultBranch": "main",
        "useIgnoreFile": true
    }
}